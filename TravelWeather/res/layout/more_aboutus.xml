<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/login_bg">
    <TextView 
        android:id="@+id/more_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height_other"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/travel_top_bg"
        android:gravity="center_horizontal"
        android:textColor="@color/theme1_red"
        android:textSize="20sp"
        android:text="@string/about"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/more_title"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/guan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           	android:textSize="18sp"
           	android:layout_marginBottom="8dp"
            android:text="@string/about_us1"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/guan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="@string/about_us2"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/guan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="@string/about_us3"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/guan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="@string/about_us4"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/guan5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="@string/about_us5"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/guan6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="@string/about_us6"
            android:gravity="center"/>
        
    </LinearLayout>
</RelativeLayout>