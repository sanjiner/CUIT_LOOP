<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_week_1"
            style="@style/trend_week"
            android:text="@string/week_sunday" />

        <TextView style="@style/trend_divider" />

        <TextView
            android:id="@+id/tv_week_2"
            style="@style/trend_week"
            android:text="@string/week_monday" />

        <TextView style="@style/trend_divider" />

        <TextView
            android:id="@+id/tv_week_3"
            style="@style/trend_week"
            android:text="@string/week_tuesday" />

        <TextView style="@style/trend_divider" />

        <TextView
            android:id="@+id/tv_week_4"
            style="@style/trend_week"
            android:text="@string/week_wednesday" />

        <TextView style="@style/trend_divider" />

        <TextView
            android:id="@+id/tv_week_5"
            style="@style/trend_week"
            android:text="@string/week_thursday" />

        <TextView style="@style/trend_divider" />

        <TextView
            android:id="@+id/tv_week_6"
            style="@style/trend_week"
            android:text="@string/week_friday" />
    </LinearLayout>

    <cuit.travelweather.view.TrendView
        android:id="@+id/tem_trend"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="温\t\t度"
	    android:textSize="20sp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="10dp"
	    android:textColor="#ffffff"/>

</RelativeLayout>