<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:id="@+id/place_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/place_top_bg"
        android:gravity="center"
        android:padding="5dp" >

        <EditText
            android:id="@+id/place_edit_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/place_top_edit"
            android:ems="10"
            android:hint="@string/place_search_hint" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/place_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/place_top_search" />

      <CheckBox
            android:id="@+id/place_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/place_top_switch"
            android:button="@null" /> 
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/place_titlebar"
        android:id="@+id/lv_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:id="@+id/rv_scenicname22"
