<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".PushActivity" >
	
    <RelativeLayout
        android:id="@+id/rl_commentdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/weather_top_bg"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_commentdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户评论"
            android:textColor="@color/theme1_red"
            android:textSize="24sp" />

    </RelativeLayout>
  	<LinearLayout 
        android:id="@+id/ll_commentdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_commentdetail"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv_commentdetail" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
        </ListView>
       	
    </LinearLayout>
</RelativeLayout>
