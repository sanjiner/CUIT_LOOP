<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/travle_tv_city"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="成都市,双流县"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/theme1_red"
	        android:textSize="16sp"
	        android:gravity="center"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="24小时"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day1_weather"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="晴"
	        android:layout_marginLeft="15dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day1_tem"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="10℃~12℃"
	        android:layout_marginLeft="8dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="48小时"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day2_weather"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="晴"
	        android:layout_marginLeft="15dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day2_tem"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="10℃~12℃"
	        android:layout_marginLeft="8dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="72小时"
	        android:layout_marginLeft="5dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day3_weather"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="晴"
	        android:layout_marginLeft="15dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/day3_tem"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="10℃~12℃"
	        android:layout_marginLeft="8dp"
	        android:textSize="16sp"
	        android:gravity="center"/>
	</LinearLayout>
</LinearLayout>
