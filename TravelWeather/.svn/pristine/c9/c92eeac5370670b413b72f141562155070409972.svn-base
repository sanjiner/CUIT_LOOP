<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/add_comment_top" >

        <RadioButton
            android:id="@+id/add_returen"
            style="@style/main_tabs_button"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:layout_alignBottom="@+id/add_comment_thank"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/add_comment_back"
            android:onClick="onback"
            android:checked="true"
            android:height="50dp"
            android:width="80dp" />

        <RadioButton
            android:id="@+id/add_comment_thank"
            style="@style/main_tabs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wel_comment"
            android:checked="true"
            android:height="50dp"
            android:scrollHorizontally="true"
            android:textSize="40sp"
            android:width="105dp" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/login_page_login"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/login_page_regist"
        android:gravity="center"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
         android:orientation="horizontal" />

        <TextView
            android:id="@+id/test_ID"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginTop="14dp"
            android:text="@string/test"
            android:textColor="@color/theme1_red"
            android:textSize="18sp" />
        <RatingBar 
            android:id="@+id/testBar" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"  
            android:rating="5"
            android:layout_marginRight="25dp"
            style="?android:attr/ratingBarStyleIndicator" />

          <TextView
              android:id="@+id/condition_ID"
              android:layout_width="176dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="25dp"
              android:layout_marginTop="14dp"
              android:text="@string/condition"
              android:textColor="@color/theme1_red"
              android:textSize="18sp" />

        <RatingBar 
            android:id="@+id/conditionBar" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"  
            android:rating="1.2"
            android:layout_marginRight="25dp"
            style="?android:attr/ratingBarStyleIndicator" />

        <TextView
            android:id="@+id/serve_ID"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginTop="14dp"
            android:text="@string/serve"
            android:textColor="@color/theme1_red"
            android:textSize="18sp" />

        <RatingBar 
            android:id="@+id/serveBar" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"  
            android:rating="3"
            android:layout_marginRight="25dp"
            style="?android:attr/ratingBarStyleIndicator" />

        <TextView
            android:id="@+id/say_ID"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginTop="14dp"
            android:text="@string/say"
            android:textColor="@color/theme1_red"
            android:textSize="18sp" />

         <EditText
             android:id="@+id/et_say_id"
             android:layout_width="262dp"
             android:layout_height="60dp"
             android:layout_marginLeft="8dp"
             android:background="@drawable/login_edit"
             android:ems="10"
             android:inputType="textWebEditText" >

             <requestFocus />
         </EditText>
          </LinearLayout>

<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <Button
            android:id="@+id/botton_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_comment_ensure" />

    </RelativeLayout>
 </LinearLayout>



 

