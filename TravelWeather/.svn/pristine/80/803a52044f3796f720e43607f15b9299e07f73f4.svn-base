<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_window"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_window_relative1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/add_comment_top" >

        <RadioButton
            android:id="@+id/add_comment_thank"
            style="@style/main_tabs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_comment_thank"
            android:checked="true"
            android:height="50dp"
            android:scrollHorizontally="true"
            android:textSize="40sp"
            android:width="105dp" />

        <RadioButton
            android:id="@+id/add_returen"
            style="@style/main_tabs_button"
            android:layout_width="55sp"
            android:layout_height="40sp"
            android:layout_alignBottom="@+id/add_comment_thank"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/add_comment_back"
            android:onClick="onback"
            android:checked="true"
            android:height="50dp"
            android:width="80dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_page_login"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/login_page_regist"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textWebEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textWebEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_phone_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_phone_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textWebEditText" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_picture_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="105dp"
            android:text="@string/picture"
            android:textColor="@color/theme1_red"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="left"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_page_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_label_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_label_id"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_registname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textWebEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_preference_mid"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_label_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_label_pass"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_preference_mid"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_label_pass_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_label_pass_confirm"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_preference_last"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_label_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_label_Email"
                android:textColor="@color/theme1_red"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/login_btn_regist"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_theme1"
            android:onClick="register"
            android:text="@string/regist"
            android:textColor="@color/theme1_red"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/botton_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add_comment_ensure"/>

    </RelativeLayout>

</LinearLayout>