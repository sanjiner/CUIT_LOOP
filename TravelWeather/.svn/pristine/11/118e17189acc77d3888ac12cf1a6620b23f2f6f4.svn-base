<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".PushActivity" >
	
    <RelativeLayout
        android:id="@+id/rl_PushActivity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/weather_top_bg"
        android:orientation="horizontal" >
		<ImageButton 
     	 	android:layout_width="wrap_content"
     	 	android:layout_height="wrap_content"
     	 	android:src="@drawable/back_map_normal"
     	 	android:onClick="return_login"
     	 	android:layout_marginLeft="5dp"
     	 	android:clickable="true"
     	 	android:background="@android:color/transparent"
     	 	/>
		
        <TextView
            android:id="@+id/infocenter_push_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_find_back"
            android:textColor="@color/theme1_red"
            android:textSize="24sp" />

    </RelativeLayout>
	
	<RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="70dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp" >
        <LinearLayout
            android:id="@+id/ll_find_back"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
    			android:layout_height="50dp"
            	android:background="@drawable/ic_preference_first"
            	android:gravity="center"
            	android:orientation="horizontal" >
				<TextView 
				    android:id="@+id/tv_find_username"
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme1_red"
                    android:textSize="18sp"
                    android:text="@string/regist_label_id"/>
                <EditText
                    android:id="@+id/et_find_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit"
                    android:ems="10"
                    android:inputType="textWebEditText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
    			android:layout_height="50dp"
            	android:background="@drawable/ic_preference_mid"
            	android:gravity="center"
            	android:orientation="horizontal" >
                <TextView 
                    android:id="@+id/tv_find_pwd"
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme1_red"
                    android:textSize="18sp"
                    android:text="@string/regist_label_pass"/>
                <EditText
                    android:id="@+id/et_find_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
    			android:layout_height="50dp"
            	android:background="@drawable/ic_preference_mid"
            	android:gravity="center"
            	android:orientation="horizontal" >
                <TextView 
                    android:id="@+id/tv_find_pwd2"
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme1_red"
                    android:textSize="18sp"
                    android:text="@string/regist_label_pass_confirm"/>
                <EditText
                    android:id="@+id/et_find_pwd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
           
            <LinearLayout
                android:layout_width="match_parent"
    			android:layout_height="50dp"
            	android:background="@drawable/ic_preference_last"
            	android:gravity="center"
            	android:orientation="horizontal" >
				<TextView 
				    android:id="@+id/tv_find_random"
				    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme1_red"
                    android:textSize="18sp"
                    android:text="@string/find_random"/>
                <EditText
                    android:id="@+id/et_find_random"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit"
                    android:ems="10"
                    android:inputType="textWebEditText" />
            </LinearLayout>
            <Button
                android:id="@+id/login_btn_login"
	            android:layout_width="@dimen/btn_width"
	          	android:layout_height="@dimen/btn_height"
	          	android:background="@drawable/btn_theme1"
	          	android:layout_marginTop="10dp"
	          	android:textColor="@color/theme1_red"
	          	android:textSize="20sp"
	          	android:onClick="find_back"
	          	android:text="@string/find_do" />
            
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>