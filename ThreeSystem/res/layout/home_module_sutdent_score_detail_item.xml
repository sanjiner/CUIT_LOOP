<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_view_bg" >
    
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/Other_person_score_detail_time"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="10sp"
	        android:layout_gravity="center"
	        android:textColor="@color/selector_more_class_list_item_textcolor"
	        android:padding="6dp"
	        android:textSize="20sp"/>

		<TextView
		    android:id="@+id/Other_person_score_detail_score"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:gravity="right"
	        android:layout_marginRight="50dp"
		    android:textColor="@color/selector_more_class_list_item_textcolor"
		    android:textSize="20sp" />
	</LinearLayout>
	<ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_narrow_right" />
</RelativeLayout>
