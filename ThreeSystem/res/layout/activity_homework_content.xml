<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/homeworkDetailHead"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_gravity="right"
		    android:textColor="#FAFFFE"
		    android:background="@color/theme_color"
		    android:text="@string/homeworkDetail_submit"
		    />
	</FrameLayout>
    <TextView 
        android:id="@+id/homeworkDetail_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="题目"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:text="满分:"
        />
        <TextView 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:textSize="20sp"
        android:text="22"
        />
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="分"
        />
    </LinearLayout>
	<TextView 
	    android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="未过期"
        />
	<TextView 
	    android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="题目:"
        />
	<TextView 
	    android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_addhomework_edittext"
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginTop="5dp"
	    >
	    <TextView 
		    android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="20sp"
	        android:layout_marginLeft="10dp"
	        android:text="备注:"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="20sp"
	        android:layout_marginLeft="5dp"
	        android:text="123456"
	        />
	</LinearLayout>
	<EditText 
	    android:layout_width="fill_parent"
	    android:layout_height="230dp"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="top"
		android:hint="请输入你的答案"
	    android:background="@drawable/shape_addhomework_edittext"
	    />
	<Button 
	    android:layout_width="wrap_content"
	    android:layout_height="60dp"
	    android:textColor="#FAFFFE"
	    android:text="添加图片"
	    android:background="@drawable/selector_all_button"
	    />
</LinearLayout>

