<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
   
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textSize="20sp"
           android:text="@string/question_setScore_head"
           />
       <View 
           android:layout_width="300dp"
           android:layout_height="2dp"
           android:background="#B2AFE9"
           />
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal"
           >
           <TextView 
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           android:textSize="20sp"
           android:text="@string/question_setScore_have"
           />
           <TextView 
           android:id="@+id/question_the_number"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           android:textSize="20sp"
           android:text="30"
           />
           <TextView 
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           android:textSize="20sp"
           android:text="@string/question_setScore_ren"
           />
       </LinearLayout>
       
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:layout_marginTop="10dp"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <TextView
               android:layout_width="110dp"
               android:layout_height="wrap_content"
               android:text="@string/question_setScore_selectCount"
               android:textSize="20sp" />

           <EditText 
               android:id="@+id/quetion_random_selectCount"
               android:layout_width="120dp"
               android:layout_height="40dp"
               android:layout_marginLeft="1dp"
               android:inputType="number"
               android:maxLength="5"
               android:background="@drawable/shape_greay_boarder"
               />
       </LinearLayout>
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:gravity="center"
           >

           <TextView
               android:layout_width="110dp"
               android:layout_height="wrap_content"
               android:text="@string/question_setScore_selectScore"
               android:textSize="20sp" />

           <EditText 
               android:id="@+id/question_random_setScore"
               android:layout_width="120dp"
               android:layout_height="40dp"
               android:layout_marginLeft="1dp"
               android:inputType="number"
               android:maxLength="5"
               android:background="@drawable/shape_greay_boarder"
               />
       </LinearLayout>
       <View 
           android:layout_width="300dp"
           android:layout_height="1dp"
           android:layout_marginTop="25dp"
           android:background="#B2AFE9"
           />

</LinearLayout>
