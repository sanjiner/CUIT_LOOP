<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/more_bg_color"
	 >
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="40dp"
		      android:text="模块评分项"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
            android:id="@+id/moduleitem_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
		<Button
		    android:id="@+id/moduleitem_addModle"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/ic_homework_add"
		    android:layout_gravity="right"
		    />
	</FrameLayout>
	
	
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >				    		
		
		<ListView
		    android:id="@+id/moduleitem_ListView"
		    android:layout_width="match_parent"
	     	android:layout_height="wrap_content"
	     	android:choiceMode="singleChoice"
	     	android:dividerHeight="10dp"
	     	android:padding="5dp"
	        android:divider="@color/more_bg_color"		     
		    />

		<TextView
	    	android:id="@+id/moduleitem_no_data"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="暂无数据"
		    android:textSize="20sp"
		    android:gravity="center"
		    />
		
		<ProgressBar 
		    android:id="@+id/moduleitem_progressbar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"/>
		
	</FrameLayout>
</LinearLayout>
