<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/more_bg_color" >
    
	<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_head_height"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="学生列表"
            android:textColor="#FAFFFE"
            android:textSize="20sp" />
        <Button
		    android:id="@+id/ThesisDefese_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
     </FrameLayout>
     
     <FrameLayout 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent" 
	     android:layout_marginTop="10dp"
		 android:background="@color/more_bg_color"	
		      >
 		
        <ListView 
        	android:id="@+id/Frame_ThesisDefense_ListView"
       		android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:dividerHeight="5dp"
		    android:divider="@color/more_bg_color"		     
		    android:padding="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@color/more_bg_color"
        />
 		 <ProgressBar 
		    android:id="@+id/Fram_ThesisDefense_ProgressBar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView 
           	  android:id="@+id/Fram_ThesisDefense_TextView_NoData"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:text="暂无数据"
		      android:layout_gravity="center"
		      android:gravity="center"
		      android:textSize="20sp"
		      />
    
        
    </FrameLayout>
    
</LinearLayout>
