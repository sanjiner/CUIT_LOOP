<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	 >
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/select_class_head"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/Record_selectClass_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
	</FrameLayout>
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     >
	<ListView
	     android:id="@+id/selecte_class"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:dividerHeight="5dp"
		 android:padding="5dp"
		 android:divider="@color/more_bg_color"		     
		 android:layout_marginLeft="5dp"
		 android:layout_marginRight="5dp"
	     />
	<ProgressBar 
	    android:id="@+id/selecte_class_progressbar"
		android:layout_gravity="center"
		android:layout_width="60dp"
        android:layout_height="60dp"
        />
	</FrameLayout>

</LinearLayout>
