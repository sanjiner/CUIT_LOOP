<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"  
   	android:focusableInTouchMode="true"
   	>
    <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/other_giveScore_title"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/other_classlist_studentlist_today_giveScore_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
	</FrameLayout>
	<LinearLayout 
	    android:id="@+id/dd"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="10dp"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="20sp"
	        android:text="@string/other_giveScore_please"
	        />
	    <TextView 
	        android:id="@+id/other_classlist_studentlist_today_giveScore_studentName"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="20sp"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:textSize="20sp"
	        android:text="@string/other_giveScore_title"
	        />
	</LinearLayout>
	<EditText 
	    android:id="@+id/other_classlist_studentlist_today_giveScore_Score"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:hint="@string/other_giveScore_ScoreHint"
	    android:textSize="20sp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="5dp"
	    android:inputType="number"
	    android:background="@drawable/shape_greay_boarder"
	    />
	<EditText 
	    android:id="@+id/other_classlist_studentlist_today_giveScore_note"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:hint="@string/other_giveScore_NoteHint"
	    android:textSize="20sp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="5dp"
	    android:background="@drawable/shape_greay_boarder"
	    />
	<FrameLayout 
	    android:id="@+id/button"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="10dp"
		 android:layout_marginRight="10dp"
	     >
		<Button
		    android:id="@+id/other_classlist_studentlist_today_giveScore_submit"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:visibility="invisible"
		    android:background="@drawable/selector_all_button"
		    android:text="@string/other_giveScore_Submit"
		    />
		<Button
		    android:id="@+id/other_classlist_studentlist_today_giveScore_modify"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:visibility="invisible"
		    android:background="@drawable/selector_all_button"
		    android:text="@string/other_giveScore_Modify"
		    />
	</FrameLayout>
	<ProgressBar 
	    	android:id="@+id/other_classlist_studentlist_today_giveScore_progressbar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"/>
</LinearLayout>
