<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thesis_StudentPersonInfo_back"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/thises_studentPersonInfo_xml"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="姓名:"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="学号:"
                android:textSize="@dimen/activity_ys_textsize" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="专业:"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="班级:"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="性别:"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="年龄:"
                android:textSize="@dimen/activity_ys_textsize" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="电话:"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="邮箱:"
                android:textSize="@dimen/activity_ys_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/thesis_studentPersonInfo_name"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/thesis_studentPersonInfo_ID"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <TextView
                android:id="@+id/thesis_studentPersonInfo_major"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/thesis_studentPersonInfo_class"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/thesis_studentPersonInfo_sex"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/thesis_studentPersonInfo_age"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <TextView
                android:id="@+id/thesis_studentPersonInfo_phone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>

            <TextView
                android:id="@+id/thesis_studentPersonInfo_email"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/activity_ys_height"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/activity_ys_textsize" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/thesis_studentPersonInfo_ok"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_all_button"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>