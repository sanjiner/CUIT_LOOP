<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	>
	 <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/homeworkStateHead"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/homework_state_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
	</FrameLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    >
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="5"
		    />
		<Button 
		    android:id="@+id/homeworkState_finished"
		    android:layout_width="230dp"
		    android:layout_height="80dp"
		    android:layout_weight="1"
		    android:textSize="30sp"
		    android:textColor="#FAFFFE"
		    android:text="@string/homeworkState_finished"
		    android:background="@drawable/selector_all_button"
		    />	 
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="4"
		    />
		<Button 
		    android:id="@+id/homeworkState_unfinished"
		    android:layout_width="230dp"
		    android:layout_height="80dp"
		    android:layout_weight="1"
		    android:textSize="30sp"
		    android:textColor="#FAFFFE"
		    android:text="@string/homeworkState_unfinished"
		    android:background="@drawable/selector_all_button"
		    />	
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="4"
		    />   
	</LinearLayout>


</LinearLayout>
