	 <RelativeLayout
        android:id="@+id/more_aboutus_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_more_aboutus_tab"
            android:orientation="horizontal"
            android:padding="1dp" >

            <RadioButton
                android:id="@+id/homework_inDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_more_aboutus_tab_left"
                android:button="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="未过期"
                android:checked="true"
                android:textColor="@color/selector_more_aboutus_tab_textcolor"
                android:focusable="false" />

            <RadioButton
                android:id="@+id/homeworkList_outOfDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_more_aboutus_tab_right"
                android:button="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="已过期"
                android:focusable="false"
                android:textColor="@color/selector_more_aboutus_tab_textcolor" />
        </RadioGroup>
    </RelativeLayout>
    <FrameLayout 
	     android:layout_width="match_parent"
	     android:layout_height="match_parent" 
	     >
        <TextView 
           	  android:id="@+id/withoutdata_textview"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:text="暂无数据"
		      android:layout_gravity="center"
		      android:gravity="center"
		     
		      android:textSize="20sp"
		      />
   <ProgressBar 
		    android:id="@+id/homework_list_progressbar"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"
            android:focusable="false"/>
	  <ListView
	     android:id="@+id/homeworkList"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="5dp"
	     android:layout_marginRight="5dp"
	     android:layout_marginTop="4dp"
	     android:divider="@color/more_bg_color"
	     android:dividerHeight="5dp"
	     android:longClickable="true"
	      
	     />

	 <ListView
	     android:id="@+id/homeworkList2"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="4dp"
	     android:dividerHeight="5dp"
	     android:layout_marginLeft="5dp"
	     android:divider="@color/more_bg_color"		     
	     android:layout_marginRight="5dp"
	     android:longClickable="true"
	     
	     />
	 
	</FrameLayout>

</LinearLayout>
