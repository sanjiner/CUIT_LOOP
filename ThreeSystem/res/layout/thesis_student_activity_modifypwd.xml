<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
	<FrameLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/activity_head_height">
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height"
        android:background="@color/theme_color"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="#FAFFFE"
        android:textSize="20sp" />
    <Button
	    android:id="@+id/thesis_changPwd_back"
	    android:layout_width="50dp"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="10dp"
	    android:background="@drawable/selector_header_back"
	    android:layout_gravity="left"/>
</FrameLayout>
    <EditText
        android:id="@+id/thesis_changPwd_oldPwd"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/selector_more_term"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="输入原密码" />
    <EditText
        android:id="@+id/thesis_changPwd_newPwd"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:background="@drawable/selector_more_term"
        android:inputType="textPassword"
        android:hint="输入新密码" />
    <EditText
        android:id="@+id/thesis_changPwd_againPwd"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:background="@drawable/selector_more_term"
        android:inputType="textPassword"
        android:hint="确认新密码" />
	<Button
	    android:id="@+id/thesis_changPwd_submit"
	    android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:background="@drawable/selector_all_button"
	    android:text="确认修改"
	    android:textColor="@color/white"
	    />
</LinearLayout>