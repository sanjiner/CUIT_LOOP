<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	 >
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/addhomework"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/addhomework_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<Button
		    android:id="@+id/addhomework_comp"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_gravity="right"
		    android:textColor="#FAFFFE"
		    android:background="@color/theme_color"
		    android:text="@string/addhomework_comp"
		    />
	</FrameLayout>
	
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
	    android:orientation="vertical"
	    >
		
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
	    android:orientation="vertical"
	    >
		<TextView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_marginLeft="0dp"
		    android:textSize="20sp"
		    android:text="@string/addhomework_selectclass"
		    />
		<com.example.PCenter.Mylistview
		    android:id="@+id/addhomework_listview"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		   
		    />
		</LinearLayout>
	
		<EditText
		    android:id="@+id/addhomework_homeworkTitle"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/shape_addhomework_edittext"
		    android:hint="@string/addhomework_addHomeworkTitle"
		    />
		 <EditText
			android:id="@+id/addhomework_homeworkContent"
		    android:layout_width="fill_parent"
		    android:layout_height="320dp"
		    android:gravity="top"
		    android:background="@drawable/shape_addhomework_edittext"
		    android:hint="@string/addhomework_addHomeworkContent"
		    />
		 
		<LinearLayout 
		    android:id="@+id/addgrade_LinearLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    >
		    <EditText
		        android:id="@+id/addhomework_score"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="4"
			    android:layout_marginLeft="2dp"
			    android:inputType="number"
			    android:background="@drawable/shape_addhomework_edittext"
			    android:hint="@string/addhomework_addScore"
		    />
		    <TextView
		        android:id="@+id/addhomework_grade"
		        android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="6"
			    android:layout_marginLeft="2dp"
			    android:background="@drawable/shape_addhomework_edittext"
		        />
		</LinearLayout>
		<Button
		        android:id="@+id/addhomework_studentVisible"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:layout_marginLeft="2dp"
			    android:background="@drawable/shape_addhomework_edittext"
			    android:text="@string/addhomework_studentVisible"
		        />
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    >
		    <Button
		        android:id="@+id/addhomework_the_last_date"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="5"
			    android:background="@drawable/shape_addhomework_edittext"
			    android:text="@string/addhomework_timeLimit"
		    />
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_weight="6"
		        >
		    <EditText 
		        android:id="@+id/addhomework_hour"
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
			    android:background="@drawable/shape_addhomework_edittext"
			    android:inputType="number"
		        android:layout_weight="1"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="20sp"
		        android:text="@string/addhomework_setHour"
		        />
		    <EditText 
		        android:id="@+id/addhomework_minute"
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
		        android:background="@drawable/shape_addhomework_edittext"
		        android:inputType="number"
		        android:layout_weight="1"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textSize="20sp"
		        android:text="@string/addhomework_setMinute"
		        />
		    </LinearLayout>
		</LinearLayout>
		<EditText 
		    android:id="@+id/addhomework_note"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="7dp"
		    android:background="@drawable/shape_addhomework_edittext"
		    android:hint="@string/addhomework_note"
		    />
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    >
			<Button 
			    android:id="@+id/addhomework_addImg"
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:layout_marginTop="5dp"
			    android:background="@drawable/selector_all_button"
			    android:text="@string/addhomework_addImg"/>
			<ImageView
		        android:id="@+id/addhomework_image_view"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="20dp"
		        android:scaleType="fitCenter"/>
		</LinearLayout>
	</LinearLayout>
	
	</ScrollView>
</LinearLayout>