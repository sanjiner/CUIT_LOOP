<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_head_height"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="今日加分列表"
            android:textColor="#FAFFFE"
            android:textSize="20sp" />
        <Button
		    android:id="@+id/home_module_student_today_detail_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
        <Button
		    android:id="@+id/home_module_student_today_detail_giveScore"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginRight="10dp"
		    android:layout_gravity="right"
		    android:background="@color/theme_color"
		    android:textColor="#FAFFFE"
		    android:textSize="20sp"
		    android:text="@string/other_classlist_studentlist_today_givescore"
		    />
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/student_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
	    <TextView 
	        android:id="@+id/home_module_student_today_detail_studentnNum"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:textSize="20sp"
	        android:text="学生学号"
	        />
	     <TextView 
	        android:id="@+id/home_module_student_today_detail_studentName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:textSize="20sp"
	        android:text="学生名字"
	        />
     </LinearLayout>
     
     <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     >
	     <ListView 
	         android:id="@+id/home_module_student_today_detail_listView"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:dividerHeight="5dp"
	         android:layout_marginLeft="10dp"
	         android:layout_marginRight="10dp"
	         android:divider="@color/more_bg_color"		     
	         />
	     <TextView 
	         android:id="@+id/home_module_student_today_detail_no"
	         android:layout_width="fill_parent"
	         android:layout_height="40dp"
	         android:layout_gravity="center"
	         android:gravity="center"
	         android:textSize="20sp"
	         android:text="@string/other_classlist_studentlist_today_NoAddScoreToday"
	         />
  		<ProgressBar 
			 android:id="@+id/home_module_student_today_detail_progressbar"
		     android:layout_gravity="center"
			 android:layout_width="60dp"
		     android:layout_height="60dp"/>
	</FrameLayout>
</LinearLayout>
