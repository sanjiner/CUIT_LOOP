<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="指导报告书"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thesis_StudentHome_GuideContent_Edite_back"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
        <Button
            android:id="@+id/thesis_StudentHome_GuideContent_Edite_submit"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:background="@drawable/thesis_selector_studentedite"
            android:textColor="@color/white"
             />
    </FrameLayout>
    <TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="15dp"
	    android:textSize="15sp"
	    android:text="指导记录"
	    />
	<EditText
	    android:id="@+id/thesis_StudentHome_GuideContent_Edite_Content"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:layout_margin="10dp"
	    android:gravity="top"
	    android:hint="请填写指导记录"
	    android:background="@drawable/shape_thesis_edittext"
	    />
	 <TextView
        android:id="@+id/thesis_StudentHome_GuideContent_Edite_err"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:textSize="25dp"
        android:visibility="gone" />

</LinearLayout>
