<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_view_bg" >
    
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:orientation="horizontal">
		<TextView
	        android:id="@+id/Record_score_detail_time"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:layout_marginLeft="10sp"
	        android:layout_gravity="center"
	        android:textColor="@color/selector_more_class_list_item_textcolor"
	        android:padding="6dp"
	        android:textSize="20sp"/>
		<LinearLayout 
		android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:layout_weight="3"
	    android:orientation="horizontal">
		<TextView
		    android:id="@+id/Record_score_detail_score"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:layout_gravity="center"
		    android:gravity="right"
		    android:padding="6dp"
		    android:textColor="@color/selector_more_class_list_item_textcolor"
		    android:textSize="20sp" />
		 <TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:layout_gravity="center"
		    android:padding="6dp"
		    android:textSize="20sp" 
		    android:visibility="gone"/>
			    <Button 
			        android:id="@+id/record_detail_del"
			        android:layout_width="60dp"
			        android:layout_height="30dp"
			        android:layout_gravity="center"
			        android:visibility="invisible"
			        android:background="@drawable/selector_record_del_button"
			        android:text="删除"
			        android:layout_marginRight="5dp"
			        android:textColor="#ffffff"
			        />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
