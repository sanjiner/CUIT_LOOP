<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	>
	 <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/homeworkDetailHead"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/homework_homeworkDetail_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<Button
		    android:id="@+id/homework_homeworkDetail_submit"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_gravity="right"
		    android:textColor="#FAFFFE"
		    android:background="@color/theme_color"
		    android:text="@string/homeworkDetail_submit"
		    />
	</FrameLayout>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<LinearLayout
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:focusable="true"   
	    android:focusableInTouchMode="true">
	 <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="5dp"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="题目:"
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:textColor="@color/theme_color"
		    />
		
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/allscore_LinearLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="5dp"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="总分："
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_manfen"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
			android:textColor="@color/theme_color"
		    />
	     </LinearLayout>
	 <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="5dp"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:id="@+id/homework_isouttime_textview"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="是否过期："
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_guoqi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:textColor="@color/theme_color"
		    />
		</LinearLayout>
		<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="5dp"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="截止时间:"
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_datetime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:textColor="@color/theme_color"
		    />
	     </LinearLayout>
	     <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_marginTop="5dp"
		    android:textSize="20dp"
		    android:text="作业描述："
		    />
	<TextView 
	    android:id="@+id/homeworkDetail_text_content"
	    android:layout_width="fill_parent"
	    android:layout_height="230dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
	    android:background="@drawable/shape_addhomework_edittext"
	    android:textColor="@color/theme_color"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
	    android:orientation="vertical"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="备注:"
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_note"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:text=""
		    android:textColor="@color/theme_color"
		    />
		</LinearLayout>
		
	<LinearLayout
					android:id="@+id/stu_ImageView_LinearLayout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="10dp"
					android:orientation="horizontal"
					android:background="@drawable/shape_homework_detail"
					>
				<ImageView
				    android:id="@+id/stu_homework_image_view"
				    android:adjustViewBounds="true"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:maxWidth="100dp"
				    android:maxHeight="100dp"
				    android:scaleType="center"
				    android:onClick="show_click"
				    android:background="@drawable/imageview_background"
				     />
				<TextView 
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:textSize="10sp"
							android:layout_marginLeft="5dp"
							android:text="（点击加载大图）"
							android:gravity="bottom"
							/>
				</LinearLayout>
	
		<LinearLayout 
		android:id="@+id/stu_work_daan_linearlayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
	    android:orientation="vertical"
	    >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20dp"
		    android:text="答案："
		    />
		<TextView 
		    android:id="@+id/homeworkDetail_stu_daan"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:hint="学生提交的答案"
		    android:textColor="@color/theme_color"
		    />
		</LinearLayout>
	
	<EditText 
	    android:id="@+id/homeworkDetail_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="230dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:gravity="top"
		android:textSize="16sp"
	    android:background="@drawable/shape_addhomework_edittext"
	    android:hint="请输入你的答案"
	    android:textColor="@color/theme_color"
	    /> 
	
	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:orientation="horizontal"
		    >
			<Button 
			    android:id="@+id/homeworkDetail_content"
			    android:layout_width="100dp"
			    android:layout_height="40dp"
			    android:layout_marginTop="10dp"
			    android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
			    android:background="@drawable/selector_all_button"
			    android:text="添加图片"
			    />
			<ImageView
		        android:id="@+id/homeworkDetail_content_image_view"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="20dp"
		        android:scaleType="fitCenter"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/homeworkDetail_teacher_LinearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
			<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:textSize="20dp"
				    android:text="评阅教师:"
				    />
			<TextView 
				    android:id="@+id/homeworkDetail_teacher"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dp"
				    android:textColor="@color/theme_color"
				    />
		</LinearLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>

