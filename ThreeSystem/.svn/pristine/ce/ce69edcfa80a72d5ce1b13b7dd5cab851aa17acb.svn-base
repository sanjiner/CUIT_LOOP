<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="中期检查管理"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thesis_StudentHome_MidleCheck_back"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/thesis_StudentHome_MidleCheck_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thesis_StudentHome_MidleCheck_summary"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="总结: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_MidleCheck_Direct"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="指导情况: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_MidleCheck_Finish"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="任务完成评估: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_MidleCheck_TeacherRedirect"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="教师指导情况: "
            android:textSize="@dimen/activity_ys_textsize" />
    </LinearLayout>

    <TextView
        android:id="@+id/thesis_StudentHome_MidleCheck_err"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:textSize="25dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/thesis_StudentHome_MidleCheck_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_all_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>
