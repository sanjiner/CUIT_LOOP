<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="模块评分项"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/Record_ModuleDetail_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<!-- <Button
		    android:id="@+id/Record_ModuleDetail_addModle"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/ic_homework_add"
		    android:layout_gravity="right"
		    /> -->
	</FrameLayout>
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >				    		
		<ListView
		    android:id="@+id/Record_ModuleDetail_ListView"
		    android:layout_width="match_parent"
	     	android:layout_height="wrap_content"
	     	android:choiceMode="singleChoice"
	     	android:dividerHeight="10dp"
	     	android:padding="5dp"
	      	android:listSelector="@drawable/selector_more_term_list_item"
	        android:divider="@color/more_bg_color"		     
		    />
		<TextView
	    	android:id="@+id/Record_ModuleDetail_No"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="暂无数据"
		    android:textSize="20sp"
		    android:gravity="center"
		    android:visibility="invisible"
		    />
		<ProgressBar 
		    android:id="@+id/Record_ModuleDetail_Progressbar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"
            />
	</FrameLayout>
</LinearLayout>
