		    android:layout_marginLeft="10dp"
		    android:background="@drawable/ic_more_set"
		    android:layout_gravity="right"
		    /> -->
    </FrameLayout>
  
    
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
                  
            <!-- 个人信息 -->

            <RelativeLayout
                android:id="@+id/activity_thesis_my_relativelayout_mydetailmessage"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_more_term"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_more_userinfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:text="@string/more_userinfo"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_narrow_right" />
            </RelativeLayout>
            <!-- 修改密码 -->

            <RelativeLayout

                android:id="@+id/activity_thesis_my_relativelayout_Modifypassword"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_more_term"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_more_modifypwd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:text="@string/more_modifypwd"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_narrow_right" />
            </RelativeLayout>
            <!-- 关于我们 -->

            <RelativeLayout
                android:id="@+id/activity_thesis_my_relativelayout_aboutus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_more_term"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_more_aboutuse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:text="@string/more_aboutus"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_narrow_right" />
            </RelativeLayout>
