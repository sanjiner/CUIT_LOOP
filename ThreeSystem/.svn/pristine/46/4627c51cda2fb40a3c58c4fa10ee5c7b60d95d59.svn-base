<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_bg_color"
    android:orientation="vertical"
	 >
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="@dimen/activity_head_height"
		android:text="新闻"
		android:gravity="center"
		android:textSize="20sp"
		android:textColor="#FAFFFE"
		android:background="@color/theme_color"
		/>

	
	<FrameLayout  
        android:layout_width="fill_parent"  
        android:layout_height="150dip" >  
  
        <android.support.v4.view.ViewPager  
            android:id="@+id/home_vp"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent" />  
  
        <LinearLayout  
            android:layout_width="fill_parent"  
            android:layout_height="35dip"  
            android:layout_gravity="bottom"  
            android:background="#33000000"
            android:gravity="center"  
            android:orientation="vertical" >  
  
            <TextView  
                android:id="@+id/tv_title"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:text="中国家庭院校园区域名字体现"  
                android:textColor="#ffffff" />  

            <LinearLayout  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_marginTop="3dip"  
                android:gravity="center" >  
  
                 <View
                    android:id="@+id/v_dot0"
                    android:layout_width="5dip"
       				android:layout_height="5dip"
        			android:layout_marginLeft="5dip"
        			android:layout_marginRight="5dip"
                    android:background="@drawable/shape_home_dot_focused" />

                <View
                    android:id="@+id/v_dot1"
                    android:layout_width="5dip"
       				android:layout_height="5dip"
        			android:layout_marginLeft="5dip"
        			android:layout_marginRight="5dip"
                    android:background="@drawable/shape_home_dot_normal" />

                <View
                    android:id="@+id/v_dot2"
                    android:layout_width="5dip"
       				android:layout_height="5dip"
        			android:layout_marginLeft="5dip"
        			android:layout_marginRight="5dip"
                    android:background="@drawable/shape_home_dot_normal" />  
            </LinearLayout>               
        </LinearLayout> 
    </FrameLayout>

	<ListView
	    android:id="@+id/news_listview"
	    android:scrollbars="none"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:choiceMode="singleChoice"
	    android:dividerHeight="5dp"
	    android:padding="5dp"
	    />
	
