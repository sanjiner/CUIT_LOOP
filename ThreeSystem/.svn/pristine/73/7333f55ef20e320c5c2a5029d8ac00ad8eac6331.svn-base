<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_view_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_module_listview_stunumber_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/selector_more_class_list_item_textcolor"
            android:textSize="20sp" 
            />

        <TextView
            android:id="@+id/home_module_listview_stuname_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textColor="@color/selector_more_class_list_item_textcolor"
            android:textSize="20sp" 
            />
        
        <TextView
            android:id="@+id/home_module_listview_stuscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/selector_more_class_list_item_textcolor"
            android:textSize="20sp" 
            />
        
   	<ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"          
            android:layout_marginRight="10dp"            
            android:src="@drawable/ic_narrow_right" />
</LinearLayout>