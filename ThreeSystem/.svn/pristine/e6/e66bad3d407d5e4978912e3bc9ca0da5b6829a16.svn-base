<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="批阅详情"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/back_tea"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<Button
		    android:id="@+id/tea_tijiao"
		    android:layout_width="wrap_content"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_gravity="right"
		    android:textColor="#FAFFFE"
		    android:background="@color/theme_color"
		    android:text="@string/homeworkDetail_submit"
		    />
	</FrameLayout>
	<ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<LinearLayout 
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    >
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:background="@drawable/shape_homework_detail">
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:textSize="20sp"
						android:text="学生姓名:"
						/>
					<TextView 
						android:id="@+id/homeworkDetail_title"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:textSize="20sp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:textSize="20sp"
						android:text="学生学号:"
						/>
					<TextView 
						android:id="@+id/homeworkDetail_number"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:textSize="20sp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>

				

		   </LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:orientation="vertical"
	        android:background="@drawable/shape_homework_detail">	   
			<LinearLayout 
				android:id="@+id/workscore_LinearLayout"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:orientation="horizontal"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:textSize="20sp"
					android:text="满分:"
				/>
				<TextView 
					android:id="@+id/stu_WorkScore"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginLeft="4dp"
					android:textSize="20sp"
					android:textColor="@color/theme_color"
				/>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="40dp"
					android:textSize="20sp"
					android:text="分"
				/>
		</LinearLayout>
				<LinearLayout 
					android:id="@+id/workgrade_LinearLayout"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal"
					>
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:textSize="20sp"
						android:text="等级:"
						/>
					<TextView 
						android:id="@+id/stu_StuGrade"
						android:layout_width="fill_parent"
						android:layout_height="40dp"
						android:layout_marginLeft="4dp"
						android:textSize="20sp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="10dp"
						android:text="是否过期："
						/>
					<TextView 
						android:id="@+id/stu_outoftime"
						android:layout_width="fill_parent"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="10dp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="10dp"
						android:text="题目:"
						/>
					<TextView 
						android:id="@+id/stu_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="20sp"
						android:layout_marginLeft="5dp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginTop="5dp"
					>
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="10dp"
						android:text="备注："
						/>
					<TextView 
						android:id="@+id/stu_memo"
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="5dp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp"
				android:orientation="vertical"
				android:background="@drawable/shape_homework_detail">
				<LinearLayout 
					android:id="@+id/tea_LinearLayout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:orientation="vertical"
					>
					 <TextView 
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:textSize="20sp"
							android:layout_marginLeft="0dp"
							android:text="学生答案："
							/>
					<TextView 
							android:id="@+id/stu_daan"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:textSize="20sp"
							android:layout_marginLeft="0dp"
							android:textColor="@color/theme_color"
							/>
	
				</LinearLayout>
				<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:orientation="vertical"
					>
					<TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="0dp"
						android:text="学生提交时间:"
						/>
					<TextView 
						android:id="@+id/stu_updatetime"
						android:layout_width="fill_parent"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:gravity="left"
						android:layout_marginLeft="0dp"
						android:textColor="@color/theme_color"
						/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/stu_getscorelayout"
					android:layout_width="fill_parent"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:orientation="horizontal"
					>
					 <TextView 
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:textSize="20sp"
							android:layout_marginLeft="0dp"
							android:text="学生得分:"
							/>
					 <TextView 
							android:id="@+id/StuScore"
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:textSize="20sp"
							android:layout_marginLeft="5dp"
							android:textColor="@color/theme_color"
							/>
				 </LinearLayout>
				 <TextView 
						android:layout_width="wrap_content"
						android:layout_height="40dp"
						android:textSize="20sp"
						android:layout_marginLeft="10dp"
						android:text="请输入学生作业等级:"
						/>
				<RelativeLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:orientation="horizontal" >
					<SeekBar
			            android:id="@+id/homework_givescore_seekbar"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="5dp"
			            android:max="4"
			            android:padding="6dp"
			            android:progress="0"
			            android:layout_toLeftOf="@+id/tea_remark"
			            android:textColor="@color/selector_more_class_list_item_textcolor"
			            android:textSize="50sp"
			            android:progressDrawable="@drawable/seekbar_style"  
			        	android:thumb="@drawable/selector_thumb" />
					<EditText 
						android:id="@+id/tea_remark"
						android:layout_width="50dp"
			            android:layout_height="40dp"
			            android:layout_alignParentRight="true"
			            android:layout_marginRight="10dp"
			            android:layout_marginLeft="15dp"
						android:gravity="center"
						android:editable="false"
						android:background="@drawable/shape_greay_boarder"
						android:textColor="@color/theme_color"
						android:textSize="20sp"
						/>
			 </RelativeLayout>
			</LinearLayout>
			<LinearLayout
					android:id="@+id/ImageView_LinearLayout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="10dp"
					android:orientation="horizontal"
					android:background="@drawable/shape_homework_detail"
					>
				<ImageView
				    android:id="@+id/imageView1"
				    android:adjustViewBounds="true"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:scaleType="center"
				    android:onClick="show_click"
				    android:background="@drawable/imageview_background"
				     />
				<TextView 
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:textSize="10sp"
							android:layout_marginLeft="5dp"
							android:text="（点击加载大图）"
							android:gravity="bottom"
							/>
				</LinearLayout>
			<LinearLayout 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:orientation="vertical"
					android:background="@drawable/shape_homework_detail">
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="40dp"
					android:textSize="20sp"
					android:layout_marginLeft="10dp"
					android:text="教师评语："
					/>
				<TextView 
					android:id="@+id/TeacherMarkMemo"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:background="@drawable/shape_addhomework_edittext"
					android:hint="暂无评语"
					android:textColor="@color/theme_color"
					/>
				<EditText 
					android:id="@+id/tea_edit"
					android:layout_width="fill_parent"
					android:layout_height="230dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:gravity="top"
					android:hint="请输入你的评语"
					android:textColor="@color/theme_color"
					android:background="@drawable/shape_addhomework_edittext"
					/>
			</LinearLayout>
	
	
				</LinearLayout>
	</ScrollView>
</LinearLayout>
