<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height"
        android:background="@color/theme_color" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="任务书"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thesis_StudentHome_TaskBook_back"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/thesis_StudentHome_TaskBook_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thesis_StudentHome_TaskBook_SubjectName"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="课题名称: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_TaskBook_SubjectSource"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="课题来源: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_TaskBook_SubjectType"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="选课类型: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_TaskBook_SubjectBackgroudAndGoal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="选题背景即目的: "
            android:textSize="@dimen/activity_ys_textsize" />

        <TextView
            android:id="@+id/thesis_StudentHome_TaskBook_TaskAndRequire"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_ys_height"
            android:background="@drawable/ic_more_item_bg_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_ys_paddingleft"
            android:text="工作任务即要求: "
            android:textSize="@dimen/activity_ys_textsize" />
    </LinearLayout>

    <TextView
        android:id="@+id/thesis_StudentHome_TaskBook_err"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:textSize="25dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/thesis_StudentHome_TaskBook_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_all_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>