<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/more_bg_color"
    >
    <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/other_classlist_studentlist_Head"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/home_module_studentlist_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
	</FrameLayout>
	
    
    <LinearLayout 
		    android:id="@+id/mm"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    >
	    	<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:orientation="horizontal"
			    >
				<TextView 
				    android:id="@+id/home_module_studentlist_className"
				    android:layout_width="wrap_content"
				    android:layout_height="40dp"
				    android:textSize="20sp"
				    android:layout_marginTop="10dp"
				    android:text="班级名字"
			    	/>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="40dp"
				    android:textSize="20sp"
				    android:layout_marginLeft="50dp"
				    android:layout_marginTop="10dp"
				    android:text="模块名字："
			    	/>
				<TextView 
				    android:id="@+id/home_module_studentlist_moduleName"
				    android:layout_width="wrap_content"
				    android:layout_height="40dp"
				    android:textSize="20sp"
				    android:layout_marginTop="10dp"
				    android:text="模块名字"
			    	/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:orientation="horizontal"
			    >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:textSize="20sp"
			        android:text="@string/other_classlist_studentlist_have"
			        />
			    <TextView 
			        android:id="@+id/home_module_studentlist_count"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_marginLeft="5dp"
			        android:textSize="20sp"
			        android:text="5"
			        />
			    <TextView
			    	android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_marginLeft="5dp"
			        android:textSize="20sp"
			        android:text="@string/other_classlist_studentlist_ren"
			        />
			</LinearLayout>
						
		</LinearLayout>
    
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

         <ListView 
		    android:id="@+id/home_module_classlist_studentlist"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:dividerHeight="5dp"
		    android:padding="5dp"
		    android:divider="@color/more_bg_color"		     
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    />
        
        <TextView
	    	android:id="@+id/home_module_studentlist_no_data"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="暂无数据"
		    android:textSize="20sp"
		    android:gravity="center"
		    /> 
         				
		<ProgressBar 
		    android:id="@+id/home_module_studentlist_progressbar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"/>
	</FrameLayout>
    
  	
</LinearLayout>
