<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_bg_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_head_height"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="成绩"
            android:textColor="#FAFFFE"
            android:textSize="20sp" />
        
    </FrameLayout>
  
    <FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	    
		<ListView
		    android:id="@+id/process_class_ListView"
		    android:layout_width="match_parent"
	     	android:layout_height="wrap_content"
	     	android:choiceMode="singleChoice"
	     	android:dividerHeight="5dp"
	     	android:padding="5dp"
	        android:divider="@color/more_bg_color"	     
		    />
		<ProgressBar 
		    android:id="@+id/process_class_progressbar"
		    android:layout_gravity="center"
		    android:layout_width="60dp"
            android:layout_height="60dp"/>
		
	</FrameLayout>

</LinearLayout>