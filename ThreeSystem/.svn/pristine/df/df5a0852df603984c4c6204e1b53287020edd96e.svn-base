<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	 >
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/student_score_detail_head"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/student_score_detail_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
		<Button
		    android:id="@+id/student_score_detail_charLine"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginRight="10dp"
		    android:background="@drawable/ic_chartline"
		    android:visibility="invisible"
		    android:layout_gravity="right"
		    />
	</FrameLayout>
	<RelativeLayout 
	    android:id="@+id/UserInfo"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginLeft="20dp"
	    android:visibility="invisible"
	    >
	    <TextView 
	        android:id="@+id/studentID"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_marginLeft="10dp"
	        android:gravity="left"
	        android:textSize="20sp"
	        />
	    <TextView 
	        android:id="@+id/studentName"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="40dp"
	        android:textSize="20sp"
	        />
	</RelativeLayout>
	<FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     >
		<ListView
		    android:id="@+id/Record_one_detail"
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:dividerHeight="5dp"
			 android:padding="5dp"
			 android:divider="@color/more_bg_color"	
		     />
		<LinearLayout 
		    android:id="@+id/aa"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="invisible"
		    android:gravity="center"
		    android:orientation="horizontal"
		    >
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:layout_marginRight="10dp"
		        android:textSize="20sp"
		        android:text="你的平时成绩为:"
		        />
		     <TextView 
		        android:id="@+id/record_total"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:textSize="20sp"
		        />
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:textSize="20sp"
		        android:text="分"
		        />
		</LinearLayout>
		<TextView 
		        android:id="@+id/record_no"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:textSize="20sp"
		        android:layout_gravity="center"
		        android:visibility="invisible"
		        android:text="暂无数据"
		        />
		<ProgressBar 
	    android:id="@+id/record_detail_progressbar"
		android:layout_gravity="center"
		android:layout_width="60dp"
        android:layout_height="60dp"
        />
	</FrameLayout>
</LinearLayout>
