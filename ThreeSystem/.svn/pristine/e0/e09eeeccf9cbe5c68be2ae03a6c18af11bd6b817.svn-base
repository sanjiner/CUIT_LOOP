<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	 >
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginBottom="17dp"
    	android:orientation="vertical">
		<FrameLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     >
			<TextView 
			      android:id="@+id/record_detail_head"
			      android:layout_width="fill_parent"
			      android:layout_height="@dimen/activity_head_height"
			      android:text="@string/student_score_detail_head"
			      android:gravity="center"
			      android:textSize="20sp"
			      android:textColor="#FAFFFE"
			      android:background="@color/theme_color"
			      />
			<Button
			    android:id="@+id/student_score_detail_back2"
			    android:layout_width="40dp"
			    android:layout_height="@dimen/activity_head_height"
			    android:layout_marginLeft="10dp"
			    android:background="@drawable/selector_header_back"
			    android:layout_gravity="left"
			    />
			<Button
			    android:id="@+id/student_score_detail_charLine2"
			    android:layout_width="40dp"
			    android:layout_height="@dimen/activity_head_height"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/ic_chartline"
			    android:visibility="invisible"
			    android:layout_gravity="right"
			    />
		</FrameLayout>
		<RelativeLayout 
		    android:id="@+id/UserInfo2"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:layout_marginTop="12dp"
		    android:layout_marginLeft="20dp"
		    android:visibility="invisible"
		    >
		    <TextView 
		        android:id="@+id/studentID2"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:layout_marginLeft="10dp"
		        android:gravity="left"
		        android:textSize="20sp"
		        />
		    <TextView 
		        android:id="@+id/studentName2"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="40dp"
		        android:textSize="20sp"
		        />
		</RelativeLayout>
		<FrameLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent"
		     >
			<com.example.PCenter.Record.Record_StudentDetail_ListView 
			    android:id="@+id/mListView2"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:dividerHeight="5dp"
			 	android:padding="5dp"
			 	android:divider="@color/more_bg_color"	
	        	>
			    
			</com.example.PCenter.Record.Record_StudentDetail_ListView>
			<LinearLayout 
			    android:id="@+id/aa"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:visibility="invisible"
			    android:gravity="center"
			    android:orientation="horizontal"
			    >
			     <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_marginRight="10dp"
			        android:textSize="20sp"
			        android:text="你的平时成绩为:"
			        />
			     <TextView 
			        android:id="@+id/record_total2"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:textSize="20sp"
			        />
			     <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:textSize="20sp"
			        android:text="分"
			        />
			</LinearLayout>
			<TextView 
			        android:id="@+id/record_no2"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:textSize="20sp"
			        android:layout_gravity="center"
			        android:visibility="invisible"
			        android:text="暂无数据"
			        />
			<ProgressBar 
		    android:id="@+id/record_detail_progressbar2"
			android:layout_gravity="center"
			android:layout_width="60dp"
	        android:layout_height="60dp"
	        />
		</FrameLayout>
	</LinearLayout>
		<RelativeLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:gravity="center_horizontal"
	         android:layout_marginBottom="3dp"
	         android:layout_alignParentBottom="true" 
	         >  
		<TextView 
		    android:id="@+id/record_detail_moveHint"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="20dp"
		    android:text="注: 左滑可删除指定项记录"
		    android:visibility="gone"
		    />
		</RelativeLayout>
</RelativeLayout>
