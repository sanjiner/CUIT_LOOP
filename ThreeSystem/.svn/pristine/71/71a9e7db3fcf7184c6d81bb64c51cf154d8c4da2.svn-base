<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_head_height" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_head_height"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#FAFFFE"
            android:textSize="20sp" />

        <Button
            android:id="@+id/thesis_changPwd_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="8"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="原密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/thesis_changPwd_oldPwd"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="3"
            android:background="#fff"
            android:hint="输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="8"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="新密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/thesis_changPwd_newPwd"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="3"
            android:background="#fff"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>
<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey" />
            </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="8"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="确认密码:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/thesis_changPwd_againPwd"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="3"
            android:background="#fff"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/thesis_changPwd_submit"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_all_button"
        android:text="确认修改"
        android:textColor="@color/white" />

</LinearLayout>