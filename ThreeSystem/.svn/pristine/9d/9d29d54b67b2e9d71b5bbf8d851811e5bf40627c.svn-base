<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >
    <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="40dp"
		      android:text="模块列表"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
            android:id="@+id/Record_ModleList_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_header_back" />
	
	</FrameLayout>
	<FrameLayout 
	     android:layout_marginTop="20dp"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<GridView
		     android:id="@+id/Record_ModleList_gridview"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginTop="10dp"
		     android:horizontalSpacing="10dp"
		     android:numColumns="3"
		     android:verticalSpacing="10dp"
		     />
		<ProgressBar 
		    android:id="@+id/Record_ModleList_progressbar"
			android:layout_gravity="center"
			android:layout_width="60dp"
	        android:layout_height="60dp"
	        />
		<TextView 
		    android:id="@+id/Record_ModleList_no"
			android:layout_gravity="center"
			android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:visibility="gone"
	        android:text="暂无数据"
	        />
	</FrameLayout>
</LinearLayout>
