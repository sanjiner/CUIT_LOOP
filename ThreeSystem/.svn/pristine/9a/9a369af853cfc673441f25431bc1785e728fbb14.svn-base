<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Thesis_StuHome_GuideContent_item_TextViw"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:textSize="16sp" 
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:orientation="horizontal" >

       <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" /> 

        <TextView
            android:id="@+id/Thesis_StuHome_GuideContent_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="2010-10-22"
            android:textColor="@color/activity_ys_textcolor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/Thesis_StuHome_GuideContent_item_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="教师未签字"
            android:textColor="#F36653"
            android:textSize="13sp" />
        
    </LinearLayout>

</LinearLayout>