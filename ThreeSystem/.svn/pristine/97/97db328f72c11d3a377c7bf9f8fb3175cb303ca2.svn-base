<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
   
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textSize="20sp"
           android:text="@string/more_logout_head"
           />
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:layout_marginTop="15dp"
           android:textSize="20sp"
           android:text="@string/more_logout_confirm"
           />
       <View 
           android:layout_width="270dp"
           android:layout_height="1dp"
           android:layout_marginTop="25dp"
           android:background="#B2AFE9"
           />
       <LinearLayout 
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:orientation="horizontal"
           >
           <TextView 
               android:id="@string/more_logout_cancel"
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:gravity="center"
               android:layout_weight="1"
               android:layout_marginRight="35dp"
               android:textSize="22sp"
               android:text="@string/more_logout_cancel"
               />
           <View 
           android:layout_width="1dp"
           android:layout_height="40dp"
           android:background="#B2AFE9"
           />
           <TextView  
               android:id="@string/more_logout_ok"
               android:layout_width="fill_parent"
               android:layout_height="40dp"
               android:layout_weight="1"
               android:layout_marginLeft="35dp"
               android:gravity="center"
               android:textSize="22sp"
               android:text="@string/more_logout_ok"
               />
       </LinearLayout>

</LinearLayout>
