<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	>
	 <FrameLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     >
		<TextView 
		      android:layout_width="fill_parent"
		      android:layout_height="@dimen/activity_head_height"
		      android:text="@string/more_personInfo_head"
		      android:gravity="center"
		      android:textSize="20sp"
		      android:textColor="#FAFFFE"
		      android:background="@color/theme_color"
		      />
		<Button
		    android:id="@+id/more_personInfo_back"
		    android:layout_width="40dp"
		    android:layout_height="@dimen/activity_head_height"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/selector_header_back"
		    android:layout_gravity="left"
		    />
	</FrameLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_marginTop="60dp"
	    android:layout_marginLeft="40dp"
	    android:textSize="20sp"
	    android:text="@string/more_info_user"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_marginLeft="50dp"
	    android:orientation="horizontal"
	    >
		<TextView 
		    android:id="@+id/more_info_userId"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:layout_weight="1"
		    android:layout_marginLeft="15dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
		<TextView 
		    android:id="@+id/more_info_userName"
		    android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:layout_weight="1"
		    android:layout_marginLeft="25dp"
		    android:gravity="left"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="40dp"
	    android:layout_marginTop="20dp"
	    android:orientation="horizontal"
	    >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="5"
		    android:orientation="vertical"
		    >
		    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:textSize="20sp"
		    android:text="@string/more_info_userIdentity"
		    />
		    <TextView 
		    android:id="@+id/more_info_userSex2"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:text="@string/more_info_userSex"
		    />
		    <TextView 
		    android:id="@+id/more_info_userClass2"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:text="@string/more_info_userClass"
		    />
		    <TextView 
		    android:id="@+id/more_info_MajorName2"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:text="@string/more_info_MajorName"
		    />
		    <TextView 
		    android:id="@+id/more_info_userDepartmentName2"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:text="@string/more_info_userDepartmentName"
		    />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="3"
		    android:orientation="vertical"
		    >
		    <TextView 
		    android:id="@+id/more_info_userIdentity"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
		    <TextView 
		    android:id="@+id/more_info_userSex"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
		    <TextView 
		    android:id="@+id/more_info_userClass"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
		    <TextView 
		    android:id="@+id/more_info_MajorName"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    /> 
		    <TextView 
		    android:id="@+id/more_info_userDepartmentName"
		    android:layout_width="wrap_content"
		    android:layout_height="40dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:textColor="@color/theme_color"
		    />
		</LinearLayout>
	    
	</LinearLayout>
</LinearLayout>
