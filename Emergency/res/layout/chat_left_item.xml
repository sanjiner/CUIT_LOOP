<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip" >

    <TextView
        android:id="@+id/chat_item_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/bg_chat_time"
        android:gravity="center_vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:textColor="@color/default_textColor"
        android:textSize="10.0sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/friend_head"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_ballon_left"
            android:clickable="true"
            android:minHeight="44.0dip" >

            <ImageView
                android:id="@+id/chat_item_msg_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:maxHeight="105dp"
                android:maxWidth="180dp"
                android:minHeight="37dp"
                android:minWidth="40dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chat_item_msg_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:maxHeight="37dp"
                    android:maxWidth="180dp"
                    android:minHeight="30dp"
                    android:minWidth="40dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/voice_play_button_lft"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chat_item_msg_dura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8.0dip"
                    android:textColor="@color/default_textColor"
                    android:textSize="10.0sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_item_msg_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/default_textColor"
                android:textSize="16.0sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>